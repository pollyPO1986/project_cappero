extend layout/_layout-large.jade

mixin albums(album,photos,cover)
	li.pic-box
		a.moveimg.pic_169(data-fancybox=album, data-thumbs='{"autoStart":true}', href=photos)
			.imgbox(style=cover)
		div(style='display: none;')
			a(data-fancybox=album, href='images/album/env_800x600_01.jpg', data-thumb='images/album/env_800x600_01.jpg')
			a(data-fancybox=album, href='images/album/env_800x600_02.jpg', data-thumb='images/album/env_800x600_02.jpg')
			a(data-fancybox=album, href='images/album/env_800x600_03.jpg', data-thumb='images/album/env_800x600_03.jpg')
